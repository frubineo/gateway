{
  "name": "bimstrength/api-gateway",
  "description": "ðŸšª API Gateway - Ultra-High Performance Central Routing & Security Hub",
  "type": "project",
  "license": "proprietary",
  "version": "2.0.0",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-openssl": "*",
    "ext-redis": "*",
    "ext-apcu": "*",
    "ext-sodium": "*",
    "ext-gd": "*",
    "ext-pdo": "*",
    "ext-bcmath": "*",
    "ext-gmp": "*",
    "symfony/framework-bundle": "^7.0",
    "symfony/runtime": "^7.0",
    "symfony/console": "^7.0",
    "symfony/dotenv": "^7.0",
    "symfony/security-bundle": "^7.0",
    "symfony/validator": "^7.0",
    "symfony/serializer": "^7.0",
    "symfony/http-client": "^7.0",
    "symfony/messenger": "^7.0",
    "symfony/rate-limiter": "^7.0",
    "symfony/cache": "^7.0",
    "symfony/monolog-bundle": "^3.10",
    "symfony/uid": "^7.0",
    "symfony/mailer": "^7.0",
    "symfony/notifier": "^7.0",
    "doctrine/doctrine-bundle": "^2.11",
    "doctrine/orm": "^3.0",
    "api-platform/core": "^3.2",
    "lexik/jwt-authentication-bundle": "^2.20",
    "nelmio/api-doc-bundle": "^4.19",
    "nelmio/cors-bundle": "^2.4",
    "predis/predis": "^2.2",
    "elasticsearch/elasticsearch": "^8.11",
    "guzzlehttp/guzzle": "^7.8",
    "react/socket": "^1.15",
    "ratchet/pawl": "^0.4",
    "league/csv": "^9.12",
    "nesbot/carbon": "^2.71",
    "ramsey/uuid": "^4.7",
    "webmozart/assert": "^1.11",
    "brick/math": "^0.11",
    "intervention/image": "^3.5",
    "league/flysystem": "^3.23",
    "aws/aws-sdk-php": "^3.290",
    "symfony/workflow": "^7.0",
    "symfony/expression-language": "^7.0",
    "hashids/hashids": "^5.0",
    "tuupola/base62": "^3.0",
    "prometheus/client_php": "^2.6",
    "monolog/monolog": "^3.5",
    "symfony/property-access": "^7.0",
    "symfony/property-info": "^7.0",
    "pusher/pusher-php-server": "^7.2",
    "voku/anti-xss": "^4.1",
    "league/circuit-breaker": "^4.0",
    "nyholm/psr7": "^1.8",
    "symfony/psr-http-message-bridge": "^7.0",
    "league/oauth2-server": "^8.5",
    "spomky-labs/jose": "^7.2",
    "web-token/jwt-framework": "^3.3"
  },
  "require-dev": {
    "symfony/phpunit-bridge": "^7.0",
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-symfony": "^1.3",
    "friendsofphp/php-cs-fixer": "^3.40",
    "codeception/codeception": "^5.0",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.23",
    "symfony/browser-kit": "^7.0",
    "symfony/css-selector": "^7.0"
  },
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "apcu-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "autoload": {
    "psr-4": {
      "ApiGateway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ApiGateway\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "quality": [
      "php-cs-fixer fix",
      "phpstan analyse"
    ],
    "gateway": [
      "bin/console gateway:health-check",
      "bin/console gateway:route-discovery",
      "bin/console gateway:load-balance",
      "bin/console gateway:circuit-test"
    ],
    "security": [
      "bin/console security:scan-tokens",
      "bin/console security:rate-limit-check",
      "bin/console security:auth-validate",
      "bin/console security:firewall-test"
    ],
    "routing": [
      "bin/console route:microservices-map",
      "bin/console route:health-probes",
      "bin/console route:failover-test",
      "bin/console route:performance-metrics"
    ]
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "7.0.*"
    }
  }
}
